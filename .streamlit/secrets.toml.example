# Streamlit Secrets Configuration Template
# Copy this to secrets.toml and fill in your credentials
# DO NOT COMMIT secrets.toml TO GIT

# Google Earth Engine Configuration
[gee]
# Your GEE project ID
project_id = "your-project-id"
project_name = "Your Project Name"

# For cloud deployment with service account:
# service_account_json = '''
# {
#   "type": "service_account",
#   "project_id": "your-project-id",
#   "private_key_id": "...",
#   "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",
#   "client_email": "your-sa@your-project.iam.gserviceaccount.com",
#   "client_id": "...",
#   ...
# }
# '''

# Sentinel Hub Configuration
[sentinelhub]
# Get credentials from: https://apps.sentinel-hub.com/dashboard/#/account/settings
# client_id = "your-sentinelhub-client-id"
# client_secret = "your-sentinelhub-client-secret"

# Google Cloud API (optional - for Maps, Places, etc)
[google_cloud]
# api_key = "your-google-cloud-api-key"
# project_id = "your-project-id"
