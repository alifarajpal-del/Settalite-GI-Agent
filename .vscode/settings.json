{
  // ============================================================
  // Python Configuration
  // ============================================================
  "python.analysis.exclude": [
    "**/venv/**",
    "**/heritage_env/**",
    "**/__pycache__/**",
    "**/.git/**",
    "**/node_modules/**",
    "**/.venv/**",
    "**/env/**"
  ],
  
  "python.analysis.ignore": [
    "**/venv/**",
    "**/heritage_env/**",
    "**/__pycache__/**"
  ],

  // Disable Pylint completely (use only Pyright for type checking)
  "python.linting.pylintEnabled": false,
  
  // Enable Pyright for better type checking with fewer false positives
  "python.analysis.typeCheckingMode": "basic",
  
  // Reduce noise from Python analysis
  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "none",
    "reportOptionalMemberAccess": "none",
    "reportOptionalSubscript": "none",
    "reportPrivateImportUsage": "none",
    "reportUnusedImport": "warning",
    "reportUnusedVariable": "warning",
    "reportMissingImports": "error",
    "reportUndefinedVariable": "error"
  },

  // ============================================================
  // Files to Exclude from Search and Explorer
  // ============================================================
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.git": true,
    "**/venv": true,
    "**/heritage_env": true,
    "**/.venv": true,
    "**/env": true,
    "**/*.egg-info": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ipynb_checkpoints": true
  },

  "search.exclude": {
    "**/venv/**": true,
    "**/heritage_env/**": true,
    "**/__pycache__/**": true,
    "**/.git/**": true,
    "**/node_modules/**": true,
    "**/.venv/**": true,
    "**/env/**": true,
    "**/*.pyc": true
  },

  "files.watcherExclude": {
    "**/venv/**": true,
    "**/heritage_env/**": true,
    "**/__pycache__/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
  },

  // ============================================================
  // Editor Settings
  // ============================================================
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "never"
  },

  // ============================================================
  // Problems Panel Configuration
  // ============================================================
  "problems.decorations.enabled": true,
  
  // Show only errors and warnings, hide info
  "problems.showCurrentInStatus": true,
  
  // ============================================================
  // Python Formatting (Optional - Black)
  // ============================================================
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // ============================================================
  // Specific File Associations
  // ============================================================
  "files.associations": {
    "*.py": "python",
    ".streamlit/secrets.toml": "toml"
  },

  // ============================================================
  // Terminal Configuration
  // ============================================================
  "terminal.integrated.env.windows": {
    "PYTHONIOENCODING": "utf-8"
  },

  // ============================================================
  // Disable Unnecessary Extensions for This Workspace
  // ============================================================
  "extensions.ignoreRecommendations": false,

  // ============================================================
  // Git Configuration
  // ============================================================
  "git.ignoreLimitWarning": true,

  // ============================================================
  // Additional Python Settings
  // ============================================================
  "python.languageServer": "Pylance",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": false,
  
  // ============================================================
  // Jupyter Notebook Settings (if using notebooks)
  // ============================================================
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  
  // ============================================================
  // SonarQube/SonarLint Configuration
  // ============================================================
  "sonarlint.rules": {
    "python:S1192": {
      "level": "off"
    },
    "python:S1854": {
      "level": "off"
    },
    "python:S1481": {
      "level": "off"
    },
    "python:S4144": {
      "level": "off"
    },
    "python:S6204": {
      "level": "off"
    },
    "python:S1871": {
      "level": "off"
    },
    "python:S3776": {
      "level": "off"
    }
  },

  // ============================================================
  // Auto Save Configuration
  // ============================================================
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000
}
